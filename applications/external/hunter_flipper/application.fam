App(
    appid="hunter_flipper",
    name="Hunter Killer",
    apptype=FlipperAppType.EXTERNAL,
    entry_point="hunter_flipper_app",
    stack_size=4 * 1024,
    fap_icon="icon.png",
    fap_file_assets="assets",
    fap_extbuild=(
        ExtFile(
            path="${FAP_SRC_DIR}/assets",
            command="${PYTHON3} ${FAP_SRC_DIR}/engine/scripts/sprite_builder.py ${FAP_SRC_DIR.abspath}/sprites ${TARGET.abspath}/sprites",
        ),
    ),
    fap_category="Games",
    fap_author="josephburnett",
    fap_weburl="https://github.com/josephburnett/hunter-flipper",
    fap_version="1.0",
    fap_description="A submarine warfare simulation game ported from Pico-8 to Flipper Zero using the Flipper Zero Game Engine.",
)
