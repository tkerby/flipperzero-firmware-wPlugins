App(
    appid="1d_pacman",
    name="1D Pacman",
    apptype=FlipperAppType.EXTERNAL,
    entry_point="game_app",
    stack_size=4 * 1024,
    fap_icon="icon.png",
    fap_file_assets="assets",
    fap_extbuild=(
        ExtFile(
            path="${FAP_SRC_DIR}/assets",
            command="${PYTHON3} ${FAP_SRC_DIR}/engine/scripts/sprite_builder.py ${FAP_SRC_DIR.abspath}/sprites ${TARGET.abspath}/sprites",
        ),
    ),
    fap_category="Games",
    fap_author="easiwork",
    fap_weburl="https://github.com/easiwork/1dpacman",
    fap_version="0.1",
    fap_description="Implementation of 1D Pacman using the Flipper Zero Game Engine as boilerplate.",
)
